<Window
    x:Class="ChatApplication.View.AddUserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChatApplication.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddUserWindow"
    Width="300"
    Height="250"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock Text="Выберите пользователя" />
            <ComboBox x:Name="UserCmbBox" DisplayMemberPath="Name" />
            <Button
                x:Name="AddBtn"
                Click="AddBtn_Click"
                Content="Добавить" />
        </StackPanel>
    </Grid>
</Window>
